# ===================================
# Application Settings
# ===================================

NEXT_PUBLIC_APP_URL=https://bawwabty-v2.vercel.app/
NEXT_PUBLIC_APP_NAME=بوابتي Marketplace
NEXT_PUBLIC_DEFAULT_LANGUAGE=ar
NEXT_PUBLIC_DEFAULT_CURRENCY=JOD

# ===================================
# Platform Settings
# ===================================

NEXT_PUBLIC_DEFAULT_COMMISSION_RATE=10
NEXT_PUBLIC_DEFAULT_TAX_RATE=16
NEXT_PUBLIC_MIN_ORDER_AMOUNT=10
NEXT_PUBLIC_FREE_SHIPPING_THRESHOLD=50

# Admin User ID for notifications (get from Supabase users table)
# معرف المستخدم الإداري لإرسال الإشعارات (احصل عليه من جدول users في Supabase)
NEXT_PUBLIC_ADMIN_USER_ID=your_admin_user_id_here

# ===================================
# Feature Flags
# ===================================

NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_LOYALTY_POINTS=true
NEXT_PUBLIC_ENABLE_WALLET=true
NEXT_PUBLIC_ENABLE_COUPONS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_GEOLOCATION=true

# ===================================
# Maps & Geolocation
# ===================================

# Google Maps API Key
# احصل على مفتاح API من: https://console.cloud.google.com/google/maps-apis
# تأكد من تفعيل: Maps JavaScript API, Geocoding API, Places API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Optional: Mapbox (بديل لـ Google Maps)
# NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=xxx

# ===================================
# Optional: Payment Gateways
# ===================================

# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
# STRIPE_SECRET_KEY=sk_test_xxx

# ===================================
# Optional: Email Services
# ===================================

# SENDGRID_API_KEY=xxx
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ===================================
# Optional: SMS Services
# ===================================

# TWILIO_ACCOUNT_SID=xxx
# TWILIO_AUTH_TOKEN=xxx
# TWILIO_PHONE_NUMBER=+1234567890

# ===================================
# Optional: Analytics
# ===================================

# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_SENTRY_DSN=xxx

# ===================================
# Development
# ===================================

NODE_ENV=development


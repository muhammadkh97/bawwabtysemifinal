# ==========================================
# Mapbox Configuration
# ==========================================
# احصل على مفتاح API مجاني من: https://account.mapbox.com/
# Free tier: 50,000 map loads per month + 50,000 routing requests

NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# ==========================================
# Supabase Configuration
# ==========================================

NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ==========================================
# Application Configuration
# ==========================================

NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=بوابتي

# ==========================================
# Mapbox Style URLs (Optional)
# ==========================================
# يمكنك استخدام أنماط مخصصة من Mapbox Studio

# للسائقين (ليلي بتفاصيل الطرق)
NEXT_PUBLIC_MAPBOX_STYLE_DRIVER=mapbox://styles/mapbox/navigation-night-v1

# للعملاء (خريطة عادية)
NEXT_PUBLIC_MAPBOX_STYLE_CUSTOMER=mapbox://styles/mapbox/streets-v12

# للأدمن (satellite للإشراف)
NEXT_PUBLIC_MAPBOX_STYLE_ADMIN=mapbox://styles/mapbox/satellite-streets-v12

# ==========================================
# Geolocation Settings
# ==========================================

# تحديث موقع السائق كل X ثانية (default: 5)
NEXT_PUBLIC_LOCATION_UPDATE_INTERVAL=5

# دقة الموقع العالية (true/false)
NEXT_PUBLIC_HIGH_ACCURACY_GPS=true

# نصف قطر "الوصول" بالكيلومتر (default: 0.1 = 100 متر)
NEXT_PUBLIC_ARRIVAL_RADIUS_KM=0.1
